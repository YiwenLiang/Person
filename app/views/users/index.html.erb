<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Color</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.weight %></td>
        <td><%= user.height %></td>
        <td><%= user.color %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id = "id1" style = "margin-left: 20px;">
  <% @users.each do |users| %>
    <svg style = "margin-top: 50px;" width="<%= users.weight %>" height="<%= users.height %>">
      <rect  width="<%= users.weight %>" height="<%= users.height %>" style="margin-top: 50px;fill:<%= users.color %>;stroke-width:0;stroke:rgb(0,0,0)" />
         <text x="25" y="20" style="fill:white;"><%= users.name %>
        </text>
  </svg>
  <% end %>
</div>
<%= link_to 'New User', new_user_path %>
